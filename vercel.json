{
  "functions": {
    "app/**/*.[jt]s": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/music/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Content-Type",
          "value": "audio/mpeg"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/music/(.*)",
      "destination": "/music/$1"
    }
  ]
}